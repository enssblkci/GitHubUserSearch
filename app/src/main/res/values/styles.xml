<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SearchContainerStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">@dimen/medium_point</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/blue_grey</item>
    </style>

    <style name="SearchItemStyle" >
        <item name="android:textSize">18sp</item>
        <item name="maxLines">1</item>
        <item name="android:lineSpacingExtra">@dimen/medium_point</item>
        <item name="android:textColor">@color/blue_grey</item>
        <item name="android:layout_marginLeft">@dimen/regular_point</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GenericTextStyle" >
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue_grey</item>
        <item name="android:lineSpacingExtra">@dimen/medium_point</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
